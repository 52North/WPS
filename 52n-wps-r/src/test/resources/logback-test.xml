<configuration>
	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{ISO8601} [%t] %-5p %c: %m%n</pattern>
		</encoder>
	</appender>
	<logger name="org.n52" level="TRACE" />
	<root level="INFO">
		<appender-ref ref="console" />
	</root>
</configuration>

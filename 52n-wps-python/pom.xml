<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<inceptionYear>2009</inceptionYear>
  <parent>
    <artifactId>52n-wps-parent</artifactId>
    <groupId>org.n52.wps</groupId>
    <version>WPS 2.1-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.n52.wps</groupId>
  <artifactId>52n-wps-python</artifactId>
  <name>52n-wps-python</name>
  <version>2.0-RC7-SNAPSHOT</version>
  <packaging>jar</packaging>
  <description>The python algorithm module for the 52N WPS</description>
  <url>http://incubator.52north.org/maven/project-sites/52n-wps-server</url>
  <issueManagement>
  	<system>Bugzilla</system>
  	<url>https://incubator.52north.org/cgi-bin/bugzilla/index.cgi</url>
  </issueManagement>
  <scm>
    <connection>scm:svn:https://svn.52north.org/svn/geoprocessing/main/WPS/tags/WPS 2.0-RC7/52n-wps-python</connection>
    <developerConnection>scm:svn:https://svn.52north.org/svn/geoprocessing/main/WPS/tags/WPS 2.0-RC7/52n-wps-python</developerConnection>
    <url>https://svn.52north.org/svn/geoprocessing/main/WPS/tags/WPS 2.0-RC7/52n-wps-python</url>
  </scm>
  <build>
 	<resources>
    	<resource>
        	<directory>src/main/resources</directory>
            <includes>
            	<include>**/*.xml</include>
            </includes>
    	</resource>
    </resources>
  	<plugins>
  		<plugin>
  			<groupId>org.apache.maven.plugins</groupId>
  			<artifactId>maven-compiler-plugin</artifactId>
  			<configuration>
            <includes>
            <include>
            org/n52/wps/server/**
            </include>
            <include>
            org/n52/wps/util/**
            </include>
            <include>
            org/n52/wps/python/**
            </include>
            </includes>
        	</configuration>
  		</plugin>
  	</plugins>
  </build>
    <!-- here are the dependencies of the project -->
    <dependencies>
        <!-- Dependencies for Scope 'test' -->
        <dependency>
            <!-- junit for the unit tests -->
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <scope>test</scope>
        </dependency>
        <!-- Dependencies for Scope 'compile' -->
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.0.4</version>
            <scope>compile</scope>
        </dependency>
        
        <dependency>
            <groupId>org.n52.wps</groupId>
            <artifactId>52n-wps-server</artifactId>
            <version>${project.version}</version>
        </dependency>
     
        <dependency>
			<groupId>org.n52.wps</groupId>
  			<artifactId>52n-wps-commons</artifactId>
  	 		<version>${project.version}</version>
  		</dependency>

    </dependencies>
    <!-- here are default properties, can be overwritten by profiles -->

</project>
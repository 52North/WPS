<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
						http://www.springframework.org/schema/context
						http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<context:component-scan base-package="org.n52.wps.webapp.service" />
	<context:component-scan base-package="org.n52.wps.webapp.dao" />
	
	<bean id="wpsConfigurationDocument" class="org.n52.wps.WPSConfigurationDocument.Factory"
		factory-method="newInstance" />
		
	<bean id="wpsConfiguration" factory-bean="wpsConfigurationDocument"
		factory-method="addNewWPSConfiguration" />

</beans>

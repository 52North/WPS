<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>52-North</artifactId>
    <groupId>org.n52</groupId>
    <version>1.0.3</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.n52.wps</groupId>
  <artifactId>52n-wps-parent</artifactId>
    <distributionManagement>
    <repository>
      <id>n52-repo</id>
      <name>52n WPS repository</name>
      <url>dav://http://52north.org/maven/repo/releases</url>
    </repository>
	  <site>
	      <id>n52-repo</id>
	      <name>52n WPS site location</name>
	      <url>dav:http://52north.org/maven/project-sites/wps</url>
	  </site>
  </distributionManagement>
  <packaging>pom</packaging>
  <name>52north processing</name>
  <version>1.0-SNAPSHOT</version>
  <description>52 north processing provides different tools for web based processing in context of the OGC WPS specification.</description>
  <url>http://52north.org/maven/project-sites/wps</url>
  <issueManagement>
    <system>Bugzilla</system>
    <url>https://incubator.52north.org/cgi-bin/bugzilla/index.cgi</url>
  </issueManagement>
      <licenses>
        <license>
            <name>GNU GENERAL PUBLIC LICENSE Version 2, June 1991</name>
            <url>http://www.gnu.org/licenses/gpl.txt</url>
        </license>
    </licenses>
  <inceptionYear>2007</inceptionYear>
	<scm>
        <!-- Specification of the Source-Content-Managmentsystem -->
        <connection>scm:svn:https://52north.org/svn/geoprocessing/main/WPS/trunk/WPS</connection>
    </scm>
  <build>

  
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <descriptor>src/main/assembly/assembly.xml</descriptor>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <configuration>
        <connectionUrl>scm:svn:https://52north.org/svn/geoprocessing/main/WPS/trunk/WPS/${project.artifactId}</connectionUrl>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-scm-plugin</artifactId>
        <version>1.0-rc1</version>
        <configuration>
          <connectionType>connection</connectionType>
          <runChangeLog>true</runChangeLog>
          <goalsDirectory>./..</goalsDirectory>
          <!--checkoutDirectory>${basedir}/src</checkoutDirectory-->
        </configuration>
      </plugin>
    </plugins>
  </build>
  <modules>
    <module>52n-wps-commons</module>
    <module>52n-wps-io</module>
    <module>52n-wps-server</module>
    <module>52n-wps-webapp</module>
    <module>52n-wps-client-lib</module>
    <module>52n-wps-install-wizard</module>
    <module>52n-wps-site</module>
  </modules>
  <dependencies>
    <dependency>
      <groupId>xmlbeans</groupId>
      <artifactId>xbean</artifactId>
      <version>2.2.0</version>
    </dependency>
    <dependency>
      <groupId>javax.xml.bind</groupId>
      <artifactId>jsr173_api</artifactId>
      <version>1.0</version>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.14</version>
    </dependency>

    <!--dependency>
    	<groupId>jaxen</groupId>
    	<artifactId>jaxen</artifactId>
    	<version>1.1.1</version>
	</dependency>
	<dependency>
    	<groupId>dom4j</groupId>
    	<artifactId>dom4j</artifactId>
    <version>1.6.1</version>
</dependency-->
  </dependencies>
  <reporting>
    <plugins>
      <plugin>
      <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-changelog-plugin</artifactId>
       <version>2.1</version> 
      </plugin>
            <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.3</version>
        <configuration>
          <aggregate>true</aggregate>
        </configuration>
      </plugin>
    </plugins>
  </reporting>
</project>

